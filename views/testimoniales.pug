extends ./layouts/index

block contenido
  main.container
    h1.text-center.mt-5 #{pagina}

    blockquote.text-center Lee sobre nuestros clientes y sus experiencias
    //- El código de aqui lo llevamos al layouts para reutilizarlo en diferentes partes del proyecto
    include ./layouts/bloque_testimoniales

    .row

      .col-md-12
        h2.d-block.w-100.text-center Agrega un Testimonial

        if(errores)
          each error in errores
            .alert.col.alert-danger.text-center= error.mensaje

      .row.justify-content-center.col
        .col-md-8
          form(action="/testimoniales" method="POST")
            .form-group
              label(for="nombre") Nombre:
              input#nombre(type="text", placeholder="Tu Nombre", name="nombre", class="form-control", value= nombre)
            .form-group
              label(for="email") Correo Electrónico:
              input#email(type="email", placeholder="Tu Correo", name="email", class="form-control", value= email)
            .form-group
              label(for="mensaje") Mensaje:
              textarea#mensaje(name="mensaje", cols="30", rows="3", class="form-control", placeholder="Tu Mensaje")=  mensaje
            
            .d-grid
              input.btn.btn-success.mt-2(type="submit", value="Enviar")